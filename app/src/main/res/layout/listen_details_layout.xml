<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Liste"
        android:id="@+id/Listenname"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:textColor="#ff6e6e6e" />

    <ListView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/listView"
        android:layout_alignParentStart="true"
        android:layout_below="@id/Listenname" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Aufgaben lÃ¶schen"
        android:id="@+id/aufgabenloeschen"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Noch keine Aufgaben"
        android:id="@+id/keineAufgaben"
        android:layout_below="@+id/Listenname"
        android:layout_centerHorizontal="true"
        android:visibility="invisible" />

</RelativeLayout>