<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageView"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Titel"
        android:id="@+id/aufgabentitel"
        android:layout_marginStart="26dp"
        android:layout_below="@id/imageView"
        android:layout_alignParentStart="true"
        android:layout_marginTop="20dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Beschreibung"
        android:id="@+id/detailAnsichtBeschreibung"
        android:layout_marginTop="27dp"
        android:layout_below="@id/aufgabentitel"
        android:layout_alignStart="@id/aufgabentitel" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="wichtigkeit"
        android:id="@+id/wichtigkeitText"
        android:layout_marginTop="53dp"
        android:layout_below="@+id/detailAnsichtBeschreibung"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="71dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Wichtigkeit:"
        android:id="@+id/textView7"
        android:layout_alignTop="@+id/wichtigkeitText"
        android:layout_alignStart="@+id/detailAnsichtBeschreibung" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Done"
        android:id="@+id/done"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true" />

</RelativeLayout>